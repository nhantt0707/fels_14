<% provide(:title, @lesson.name)%>

<div class = "row">
    <h1 class = "well"><a href = "javascript:void(0);"><%= @lesson.name %></a></h1>
</div>

<div class = "row">
   <% @lesson_words.each do |lesson_word| %>
       <div class = "col-md-4 well">
            <h2><a href = "javascript:void(0);"><%= lesson_word.word.english %></a></h2>
            <%= form_tag(user_words_path, method: :post, id: lesson_word.id,
                class: "form-horizontal col-md-6") do %>
                <div class = "form-group">
                    <div class="col-sm-10">
                        <% lesson_word.word.word_answers.each do |word_answer| %>
                            <%= radio_button_tag "answer", word_answer, @word_answers_id == word_answer %>
                            <%= label_tag "word_answer_#{word_answer}", word_answer.content, class: "pad" %> <br />
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    <% end %>
</div>
