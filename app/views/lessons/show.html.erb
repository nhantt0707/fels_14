<div class = "row well">
    <h3><%= link_to @lesson.created_at.strftime("Started at %I:%M%p on %m/%d/%Y"),
        edit_lesson_path(@lesson), class: "btn btn-warning",
        title: "Click here to restart lesson" %></h3>
    <i>You learned <%= @num_leanred %>/20 words in this lesson!</i>
</div>

<div class = "container-fluid col-md-12">
    <div class = "row">
        <table class = "table table-striped table-bordered well">
            <thead>
                <th class = "center">English</th>
                <th class = "center">Vietnamese</th>
                <th class = "center">Your answer</th>
                <th class = "center">Correctness</th>
            </thead>
            <tbody>
                <% @lesson.lesson_words.each do |lesson_word| %>
                <tr>
                    <td><a href = "javascript:void(0);"><%= lesson_word.word.english %></a></td>
                    <td><%= lesson_word.word.word_answers.correct.content %></td>
                    <td><%= lesson_word.word_content %></td>
                    <td><input type="checkbox" disabled <%= lesson_word.checked? ? "checked": "" %> /></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class = "row">
    </div>
</div>
