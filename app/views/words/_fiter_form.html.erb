<%= form_tag(words_path, method: :get, id: "filter-form",
    class: "form-horizontal col-md-6") do %>
	<div class = "form-group">
		<%= label_tag :category, "Category: ", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
		<%= select_tag(:category_id,
           options_from_collection_for_select(@categories, "id", "name", params[:category_id]),
            class: "form-control") %>
		</div>
	</div>
	<div class = "form-group">
		<%= label_tag :status, "Status: ", class: "col-sm-2 control-label" %>
		<div class = "col-sm-10" >
			<% ["all", "learned", "unlearned"].each do |status| %>
				<%= radio_button_tag "status", status, @status == status %>
				<%= label_tag "status_#{status}", status.humanize, class: "pad" %>
			<% end %>
		</div>
	</div>
	<div class = "form-group">
		<label for = "submit" class = "col-sm-2  control-label"></label>
		<div class = "col-sm-10">
  		<%= submit_tag "Filter", class: "btn btn-default" %>
  	</div>
	</div>
<% end %>